<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.15"

            android:contentDescription="@string/illustrative_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            android:src="@drawable/unfacd_240x213"/>

        <ImageView
            android:id="@+id/icon_image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.15"

            android:contentDescription="@string/illustrative_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintBottom_toTopOf="@id/guideline"
             />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/intro_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/uf_regbtn_states"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/intro_view_pager"
            android:id="@+id/start_messaging_button"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_pages"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="26dp">

            <FrameLayout
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@color/signal_accent_primary"/>

            <FrameLayout
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@color/signal_accent_primary"
                android:layout_marginStart="7dp"/>

            <FrameLayout
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@color/signal_accent_primary"
                android:layout_marginStart="7dp"/>

            <FrameLayout
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@color/signal_accent_primary"
                android:layout_marginStart="7dp"/>

            <FrameLayout
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@color/signal_accent_primary"
                android:layout_marginStart="7dp"/>

            <FrameLayout
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@color/signal_accent_primary"
                android:layout_marginStart="7dp"/>

            <FrameLayout
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@color/signal_accent_primary"
                android:layout_marginStart="7dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>